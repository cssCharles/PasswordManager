		<ItemsControl ItemsSource="{Binding AllPasswords}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBox Width="100" Text="{Binding UserId}"/>
						<TextBox Width="100" Text="{Binding UserPassword}"/>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>-->
</UserControl>
